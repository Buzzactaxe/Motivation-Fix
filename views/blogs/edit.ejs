<% include ../partials/header %>

<div class= "ui main container segment">
     <div class="ui huge header">Edit <%= blog.title %></div>
     <form class= "ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
          
          <!--Title field-->
          <div class="field">
               <label>Title</label>
               <input type="text" name="blog[title]" value="<%= blog.title %>">
          </div>
          
          <!--Image field-->
          <div class="field">
               <label>Image</label>
               <input type="text" name="blog[image]" value="<%= blog.image %>"> 
          </div>
          
          <!--blog post field-->
          <div class="field">
               <label>Blog Content</label>
               <textarea name="blog[body]"><%= blog.body %></textarea>
          </div>

          <input class="ui small violet basic button" type="submit">
          <!--Back button-->
          <a id="back" class="ui small inverted violet button" href="/blogs/index">Back</a>
     </form>
</div>

<% include ../partials/footer %>